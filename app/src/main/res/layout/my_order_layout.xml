<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/orderer">

    <RelativeLayout
        android:id="@+id/layoutt_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_order"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:cropToPadding="false" />

        <TextView
            android:id="@+id/price_order"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignEnd="@+id/title_order"
            android:layout_below="@+id/title_order"
            android:layout_weight="0.11"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/title_order"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image_order"
            android:layout_marginTop="13dp"
            android:layout_weight="0.11"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textIsSelectable="false"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/unorder_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price_order"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimary"
            android:text="    Supprimer    "
            android:textColor="@color/cardview_light_background" />

        <Button
            android:id="@+id/get_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="    Venir chercher    "
            android:textColor="@color/cardview_light_background"
            android:layout_below="@+id/unorder_button"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


</LinearLayout>